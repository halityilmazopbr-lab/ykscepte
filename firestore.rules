rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Paylaşılan Sorular - Viral Growth Loop
    // Herkes okuyabilir, giriş yapmış kullanıcılar yazabilir
    match /paylasilanSorular/{soruId} {
      allow read: if true;
      allow create: if request.auth != null || true; // Demo için true
      allow update: if request.auth != null || true; // Demo için true
      allow delete: if false; // Silme yasak
    }
    
    // Kurumlar
    match /kurumlar/{kurumId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Kurum Duyuruları
    match /kurumDuyurulari/{duyuruId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deneme Sonuçları
    match /denemeSonuclari/{sonucId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Öğrenciler
    match /ogrenciler/{ogrenciId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Envanter Sonuçları
    match /envanterSonuclari/{sonucId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }
    
    // Randevular
    match /randevular/{randevuId} {
      allow read: if true;
      allow write: if request.auth != null || true; // Demo için
    }
    
    // ========== HATA DEFTERİ - Video Çözüm Linki Pro Kontrolü ==========
    // Pro kullanıcı kontrolü fonksiyonu
    function isPro() {
      return get(/databases/$(database)/documents/ogrenciler/$(request.auth.uid)).data.isPro == true;
    }
    
    match /hataDefteriSorulari/{soruId} {
      // Herkes kendi verilerini okuyabilir
      allow read: if true;
      
      // Oluşturma ve güncelleme kuralları
      allow create, update: if request.auth != null && (
        // SENARYO 1: Pro kullanıcı her şeyi yapabilir
        isPro()
        ||
        // SENARYO 2: Free kullanıcı videoCozumLinki alanına DOKUNMAMALI
        (!("videoCozumLinki" in request.resource.data) || 
         request.resource.data.videoCozumLinki == null || 
         request.resource.data.videoCozumLinki == "")
      );
      
      // Sadece kendi sorusunu silebilir
      allow delete: if request.auth.uid == resource.data.ogrenciId;
    }
    
    // Yoklama Kayıtları
    match /yoklamaKayitlari/{kayitId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }
    
    // Varsayılan: Tüm diğer koleksiyonlar
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
